<!doctype html>
<head> 
<link rel="stylesheet" type="text/css" href="/stylesheets/basic.css" />
</head>

<body >
<header class = "layout">
<div class = "layout">
    <a  href = '/'><h1>UFO Tracker</h1></a>

    <% if logged_in? %>
        <a href = '/users/<%= current_user.slug %>'><%= current_user.username %>'s Profile</a>
        <a href = '/logout'>Log Out</a>
    <% else %>
        <a href = '/login'>Log In</a>
        <a href = '/signup'>Sign Up</a>
    <% end %>

</div>
</header>


<%= yield %>
<footer class = "layout">
<h3>The Truth Is Out There</h3>
</footer>
</body>

</html>